    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:background="@color/black">

    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="Industry veterans trust us:"
        android:id="@+id/tv1">

    </TextView>


    <ImageButton
        android:id="@+id/ivlearn"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/editresume"
        app:cardCornerRadius="10dp"

        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ivmentorship"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/mentorship"
        app:cardCornerRadius="10dp"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/ivvideo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/video"
        app:cardCornerRadius="10dp"

        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/ivjobs"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/job"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        android:background="@color/black">

    </View>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="380dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="VisualLintBounds">

            <ImageView
                android:id="@+id/ivdesign"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/design"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/designtcs" />
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/design" />
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/designtcs" />

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="510dp"
        android:background="@color/black">

    </View>

    <ImageView
        android:id="@+id/clgpic"
        android:layout_width="291dp"
        android:layout_height="99dp"
